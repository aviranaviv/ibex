{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "noEmit": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "types": [ "node" ],
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ],
    },
  },
  "include": [
    "src/*.ts",
    "tests/*.ts",
    "src/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "jest.config.ts",
    "jest.setup.ts"
  ]
}
